@model FlightProject.Models.Airport

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Airport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GotoDetails" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="body">
                <p>Search for a specific airport by typing in the airport code.</p>
            </div>
            <div class="form-group">
                <label asp-for="AirportCode" class="control-label"></label>
                <input asp-for="AirportCode" class="form-control" />
               

                <span asp-validation-for="AirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Continue &raquo;</button>
            
            </div>
        </form>
        <div class="body">
            <p>Or see what airports have the highest delays!</p>
        </div>
        <div class="form-group">
                <p><a href="@Url.Action("Index","MaxAirports")" class="btn btn-primary">Click Here &raquo;</a></p>
            </div>
        <div>
        <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-md-4">
        <img src="https://www.nationsonline.org/bilder/Map_US_Airports.gif"/>
    <div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
