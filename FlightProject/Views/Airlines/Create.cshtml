@model FlightProject.Models.Airline

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Airline</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarrierCode" class="control-label"></label>
                <input asp-for="CarrierCode" class="form-control" />
                <span asp-validation-for="CarrierCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
        <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-md-4">
        <img src="https://thejetset.com/wp-content/uploads/2021/08/air-travel-demand-covid-concerns.jpeg"/>
    <div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
