@model FlightProject.Models.Airline

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Airline</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GotoDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="body">
                <p>Search for a specific airline by typing in the airline code.</p>
            </div>
            <div class="form-group">
                <label asp-for="CarrierCode" class="control-label"></label>
                <input asp-for="CarrierCode" class="form-control" />
                <span asp-validation-for="CarrierCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Continue &raquo;</button>

            </div>
        </form>
        <div class="body">
            <p>Or see what airlines have the highest delays!</p>
        </div>
        <div class="form-group">
                <p><a href="@Url.Action("Index","MaxAirlines")" class="btn btn-primary">Click Here &raquo;</a></p>
            </div>
        <div>
        <div class="body">
            <p>Want to see how many flights we're using to create this data?</p>
        </div>
        <div class="form-group">
                <p><a href="@Url.Action("Index","Counts")" class="btn btn-primary">Click Here &raquo;</a></p>
        </div>
        <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-md-4">
        <img src="https://thejetset.com/wp-content/uploads/2021/08/air-travel-demand-covid-concerns.jpeg"/>
    <div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
